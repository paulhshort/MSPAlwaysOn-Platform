        # Recent time entries (limited to 5)
        "recent_time_entries": ticket_data.get("time_entries", [])[:5] if ticket_data.get("time_entries") else [],

        # Temporal data
        "temporal_data": {
            "creation_date": ticket_data.get("date_entered", ""),
